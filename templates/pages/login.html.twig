{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block main %}
<style>
.error {color: red}
</style>

<br />
<div class="container" align="center">
    <h2>Login Page</h2>
    {% if errors is defined %}
        <span class="error">{{ error.messageKey }}</span>
      {% endif %}
    <form action="{{ path('login') }}" method="post" accept-charset="UTF-8">
      
      <input type="text" name="_username" value="{{ lastUsername }}" placeholder="Username">

      <input type="password" name="_password" placeholder="Password">

      <button type="submit">Login</botton>
      
    
{#       <h3><label for="loginName">Username or email</label></h3>
      <input id="loginName" type="text" name="loginName"
        value="{% if loginName is defined %}{{ loginName }}{% else %}{{ craft.app.user.rememberedUsername }}{% endif %}">
    
      {% if errors is defined %}
        <ul class="errors">
          {% for error in errors %}
            <li>{{ error }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    
      <input type="submit" value="Submit"> #}
    </form>
  </div>
{% endblock %}
