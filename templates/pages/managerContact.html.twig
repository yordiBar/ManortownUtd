{# templates/pages/managerContact.html.twig #}
{# page displaying list of manager names and contact numbers #}

{% extends 'base.html.twig' %}

{% block title %}Manager Contacts{% endblock %}

{% block main %}
  <br/>
  <div class="container" align="center">
    <h2>Manager Contacts</h2>
    {% if teams %}
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Team</th>
            <th scope="col">Manager Name</th>
            <th scope="col">Contact Number</th>
          </tr>
        </thead>
        <tbody>
          {% for team in teams %}
            <tr class="table-secondary">
              <td>{{team.teamName}}</td>
              <td>{{team.contactName}}</td>
              <td>{{team.contactNumber}}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <p>No manager's information to display</p>
    {% endif %}
  </div>
{% endblock %}
